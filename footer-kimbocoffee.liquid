    {
      "type": "range",
      "id": "padding_bottom_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 0
    }
  ],
  "blocks": [
     {
       "name": "Social Icon",
       "type": "icon",
       "settings": [
         {
           "type": "image_picker",
           "id": "image",
           "label": "Image"
         },
         {
           "type": "url",
           "id": "link",
           "label": "Link"
         }
       ]
     },
     {
       "name": "Address",
       "type": "address",
       "settings": [
         {
           "type": "image_picker",
           "id": "image",
           "label": "Image"
         },
         {
           "type": "text",
           "id": "title",
           "label": "Title"
         },
         {
           "type": "url",
           "id": "link",
           "label": "Link"
         }
       ]
     },
     {
       "name": "Menu",
       "type": "menu",
       "settings": [
          {
            "type": "link_list",
            "id": "menu",
            "label": "Menu"
          }
       ]
     }
   ],
  "presets": [
    {
      "name": "Custom Footer"
    }
  ]
}
