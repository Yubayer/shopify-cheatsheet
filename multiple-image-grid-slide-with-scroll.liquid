{% liquid
  assign id = section.id
%}

<style>
  #shopify-section-{{id}} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
    overflow: hidden;
  }

  @media(max-width: 1200px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
  }

  .texts-{{ id }}{
    display: flex;
    align-items: center;
    padding: 0px 50px 0px 50px;
  }
  .texts-wrapper-{{ id }} h4{
    color: #000;
    font-size: 24px;
    line-height: 24px; /* 100% */
    text-transform: uppercase;
    margin: 0 0 8px;
  }
  .texts-wrapper-{{ id }} h2{
    color: #000;
    font-size: 72px;
    line-height: 72px; /* 100% */
    letter-spacing: -2px;
    text-transform: uppercase;
    margin: 0 0 8px;
  }
  .texts-wrapper-{{ id }} p{
    color: #000;
    font-size: 16px;
    line-height: 24px; /* 120% */
    margin: 0 0 24px;
  }
  .texts-wrapper-{{ id }} a{
    display: inline-block;
    color: #FFF;
    text-align: center;
    font-size: 20px;
    line-height: 20px; /* 100% */
    text-transform: uppercase;
    text-decoration: none;
    padding: 14px 65px;
    background: #D41317;
  }
  .images-{{ id }}{
    position: relative;
    height: 100vh;
    /* overflow: hidden; */
  }
  .images-container-{{ id }}{
    display: grid;
    grid-template-columns: repeat(3, minmax(0px, 1fr));
    grid-gap: 30px;
    position: absolute;
    right: -45%;
    top: -20%;
    width: 100%;
    height: 100%;
  }
  .image-items-{{ id }}{
    transform: rotate(-25deg);
    transition: .3s;
  }

  .image-item{
    font-size: 0;
    line-height: 0;
  }
  .image-item img{
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  @media screen and (min-width: 1201px){
    #shopify-section-{{id}}{
      background: #F5F5F5;
    }
    .wrapper-{{ id }}{
      display: grid;
      grid-template-columns: 2fr 3fr;
    }
    .texts-{{ id }}{
      background: #F5F5F5;
    }
  }
  @media screen and (max-width: 1200px){
    .wrapper-{{ id }}{
      /* grid-template-columns: 1fr;
      grid-template-rows: auto auto; */
      position: relative;
    }
    /* .img-{{ id }}{
      grid-row: 1/2;
    }
    */
    .texts-{{ id }}{
      padding: 16px 20px;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%,-50%);
      width: 100%;
      height: 100%;
      background: rgba(0,0,0,53%);

      /* grid-row: 2/-1; */
    }
    .texts-wrapper-{{ id }} h4{
      font-size: 20px;
      line-height: 20px; /* 100% */
      color: #fff;
      margin: 0 0 12px;
    }
    .texts-wrapper-{{ id }} h2{
      font-size: 40px;
      line-height: 44px; /* 100% */
      color: #fff;
      letter-spacing: -1.12px;
      margin: 0 0 16px;
    }
    .texts-wrapper-{{ id }} p{
      font-size: 14px;
      line-height: 18px; /* 120% */
      color: #fff;
    }
    .texts-wrapper-{{ id }} a{
      width: clamp(100%, 300px, 400px);
      padding: 10px 30px;
    }
  }
</style>

<div
  class="sec-{{ id }} {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
  {% if settings.animations_reveal_on_scroll %}
    data-cascade
    style="--animation-order: 1;"
  {% endif %}
>
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      <div class="texts-{{ id }}">
        <div class="texts-wrapper-{{ id }}">
          {% if section.settings.subtitle != blank %}
            <h4>{{ section.settings.subtitle }}</h4>
          {% endif %}
          {% if section.settings.title != blank %}
            <h2>{{ section.settings.title }}</h2>
          {% endif %}
          {% if section.settings.text != blank %}
            <p class="rethink-sans">{{ section.settings.text }}</p>
          {% endif %}
          {% if section.settings.btn_text != blank %}
            <a href="{{ section.settings.link | default: '#' }}">{{ section.settings.btn_text }}</a>
          {% endif %}
        </div>
      </div>
      <div class="images-{{ id }}">
        <div class="images-container-{{ id }}">
          {% for i in (1..3) %}
            <div class="image-items-{{ id }} images-order-{{ forloop.index }}">
              {% for block in section.blocks %}
                <div class="image-item">
                  {% if block.settings.image %}
                    {{ block.settings.image | image_url: width: 240 | image_tag }}
                  {% endif %}
                </div>
              {% endfor %}
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    if('IntersectionObserver' in window) {
      let image_slide_1 = document.querySelector(".images-order-1")
      let image_slide_2 = document.querySelector(".images-order-2")
      let image_slide_3 = document.querySelector(".images-order-3")
      let isVisible = false
      
      let slideObserver = new IntersectionObserver((entries, observer) => {
        entries.forEach((entry, index) => {
          if(entry.isIntersecting) isVisible = true
          else isVisible = false
          
          window.addEventListener("scroll", e => {
            if(isVisible) {
              let st = document.documentElement.scrollTop
              let ot = entry.target.offsetTop - entry.target.offsetHeight
              if(st > ot) {
                let y = (st - ot) / 5
                console.log(y)
                image_slide_1.style.transform = `rotate(-25deg) translateY(${y - 400}px)`
                image_slide_2.style.transform = `rotate(-25deg) translateY(${y*-1}px)`
                image_slide_3.style.transform = `rotate(-25deg) translateY(${y - 400}px)`
              }
            }
          })
        })
      }, {})
      
      let slideObserverWrapper = document.getElementById(`shopify-section-{{ section.id }}`)
      if(slideObserverWrapper)
        slideObserver.observe(slideObserverWrapper)
      }
  })
</script>

